{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "docker:enableMajor",
        ":disableRateLimiting",
        ":dependencyDashboard",
        ":semanticCommits",
        ":enablePreCommit",
        ":automergeDigest",
        ":automergeBranch",
        "helpers:pinGitHubActionDigests",
        ":pinDependencies",
        ":pinDevDependencies"
    ],
    "dependencyDashboard": true,
    "suppressNotifications": [
        "prIgnoreNotification"
    ],
    "rebaseWhen": "conflicted",
    "schedule": [
        "every day"
    ]
}